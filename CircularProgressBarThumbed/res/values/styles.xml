<resources xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="Widget"></style>
    <style name="MyCircularProgressBar" parent="Widget">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:adjustViewBounds">true</item>
       <item name="progressColor">@color/default_progress_color</item> 
        <item name="backgroundColor">@color/default_background_color</item>       
        <item name="backStrokeWidth">5</item>
        <item name="strokeWidth">5</item> 
    </style>
    <style name="MyThumbedCircularProgressBar" parent="MyCircularProgressBar">        
        <item name="thumbColor">@color/default_thumb_color</item>  
        <item name="thumb">@drawable/circle_white</item>         
    </style>
    <style name="MyNonThumbedCircularProgressBar" parent="MyCircularProgressBar">        
        <item name="thumbEnabled">false</item>     
    </style>

</resources>
